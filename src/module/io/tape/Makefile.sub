MTAR_IO_TAPE_SRC_DIR		:= src/module/io/tape
MTAR_IO_TAPE_BUILD_DIR		:= ${BUILD_DIR}/module/io/tape
MTAR_IO_TAPE_DEPEND_DIR		:= ${DEPEND_DIR}/module/io/tape

MTAR_IO_TAPE_SRC_FILES		:= $(sort $(shell test -d ${MTAR_IO_TAPE_SRC_DIR} && find ${MTAR_IO_TAPE_SRC_DIR} -name '*.c'))
